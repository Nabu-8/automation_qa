pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'homework28', url: 'https://github.com/Nabu-8/automation_qa.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''apt-get update
                    apt-get install -y python3 python3-dev python3-pip python3.11-venv gcc libpq-dev
                    rm -rf venv
                    python3 -m venv venv '''
            }
        }
        stage('Install requiements') {
            steps {
                sh '''#!/bin/bash
                    source venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt'''
            }
        }
        stage('Run tests') {
            steps {
                sh '''#!/bin/bash
                    source venv/bin/activate
                    pytest -m "${PYTEST_MARK}" --alluredir=allure-results'''
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }

}